#!/usr/bin/gnuplot

set terminal pngcairo  enhanced font "Helvetica,11" size 1024, 756
set output 'pucks-counts.png'

#set terminal postscript eps enhanced color font "Helvetica,22" size 1024, 756 linewidth 2
#set output 'pucks-counts.eps'

set style fill transparent solid 0.2 border
set xrange [0:999999]
set yrange [0:1000]
set key left
set title system("pwd")

# Line style for axes
set style line 80 lt rgb "#808080"

# Line style for grid
set style line 81 lt 0  # dashed
set style line 81 lt rgb "#808080"  # grey

set grid back linestyle 81
set border 3 back linestyle 80

plot 'pucks-collected.0.stats' u 1:4:5 every 10 w filledcu lc rgb("#2B6088") title "pucks type 0", '' u 1:3 ps 0.2 lc rgb("#2B6088") notitle \
, 'pucks-collected.1.stats' u 1:4:5 every 10 w filledcu lc rgb("#F36E21") title "pucks type 1", '' u 1:3 ps 0.2 lc rgb("#F36E21") notitle
